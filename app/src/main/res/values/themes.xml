<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SearchViewTheme" parent="Theme.AppCompat.Light">
        <!-- Change the color of the search icon and hint text -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Change the color of the typed query text -->
        <item name="android:colorForeground">@color/white</item>
    </style>

    <!-- Base application theme for the light mode -->
    <style name="Base.Theme.ChatAndroidApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme colors here -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_text</item>
    </style>

    <!-- Application-level theme inheriting the base -->
    <style name="Theme.ChatAndroidApp" parent="Base.Theme.ChatAndroidApp" />
</resources>