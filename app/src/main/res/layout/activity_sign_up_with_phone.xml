<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="24dp"
    android:scrollbars="none"
    tools:context=".activities.SignUpWithPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Title TextView for "Phone Sign-Up" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Sign Up with Phone"
            android:textColor="@color/primary"
            android:textSize="33sp"
            android:textStyle="bold" />

        <!-- Input field for the user's phone number -->
        <EditText
            android:id="@+id/inputPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/bg_rectangle_round_light"
            android:hint="Phone Number"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <!-- Button to send OTP -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSendOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/primary" />

        <!-- Input field for OTP -->
        <EditText
            android:id="@+id/inputOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_rectangle_round_light"
            android:hint="Enter OTP"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- Verify OTP Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Verify OTP"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/primary"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/primary" />

        <!-- Input fields for the user's first and last name -->
        <EditText
            android:id="@+id/inputFirstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_rectangle_round_light"
            android:hint="First Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/inputLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_rectangle_round_light"
            android:hint="Last Name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- Complete Sign-Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCompleteSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Complete Sign-Up"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/primary"
            android:visibility="gone" />

        <!-- Global ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBarGlobal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:visibility="gone" />

        <!-- Already have an account? SIGN IN -->
        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Already have an account?\nSIGN IN"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>